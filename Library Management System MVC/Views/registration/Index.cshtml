@model Library_Management_System_MVC.Models.registration

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "registration", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h3>Registration Form</h3>
                <p>
                    This Example is for learning Basic Login and Registration Using ADO.NET in MVC.
                    <br />Hope this will boast your Knowledge.
                </p>
            </div>
            <div class="col-md-9">
                <div class="row" style="margin-top: 30px;">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(e => e.name, new { @class = "form-control", placeholder = "Name *" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(e => e.password, new { @class = "form-control", placeholder = "Password *" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(e => e.confirmPwd, new { @class = "form-control", placeholder = "Confirm Password *" })
                        </div>
                        <div class="form-group">
                            <div class="maxl inline-block">
                                @*@Html.DropDownListFor(e => e.gender, new SelectList(Model.genders, "Value", "Text"), "Select your gender *", new { @class = "form-control" })*@
                                @Html.DropDownListFor(e => e.gender,
                                new SelectList(new List<SelectListItem>{
                                   new SelectListItem { Text = "Female", Value = "0"},
                                   new SelectListItem { Text = "Male", Value = "1" }
                                }, "Value", "Text"), "Select your gender *",
                                new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(e => e.email, new { @class = "form-control", placeholder = "Your Email *" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(e => e.phone, new { @class = "form-control", placeholder = "Your Phone Number *" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(e => e.fathersName, new { @class = "form-control", placeholder = "Father's name *" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.dob)
                            @*@Html.TextBoxFor(e => e.dob, new { @class = "form-control", @Value = Model.dob.ToString("yyyy-MM-dd"), type = "date" })*@
                            @Html.TextBoxFor(e => e.dob, new { @class = "form-control", placeholder = "yyyy-MM-dd" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @*@Html.DropDownListFor(e => e.governmentIdType, new SelectList(Model.governmentIdTypes, "Value", "Text"), "Select government ID Type *", new { @class = "form-control" })*@
                            @Html.DropDownListFor(e => e.governmentIdType,
                                new SelectList(new List<SelectListItem>{
                                    new SelectListItem { Text = "Aadhar card", Value = "1"},
                                    new SelectListItem { Text = "Driving License", Value = "2" },
                                    new SelectListItem { Text = "Voter ID card", Value = "3" }
                                }, "Value", "Text"), "Select government ID Type *",
                                new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(e => e.governmentId, new { @class = "form-control", placeholder = "Government Id *" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(e => e.address1, new { @class = "form-control", placeholder = "Primary Address *" })
                        </div>
                        <div class="form-group">
                            <div class="maxl">
                                @Html.TextBoxFor(e => e.address2, new { @class = "form-control", placeholder = "Secondary Address *" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(e => e.city, new { @class = "form-control", placeholder = "City *" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(e => e.state, new { @class = "form-control", placeholder = "State *" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(e => e.pin, new { @class = "form-control", placeholder = "Pincode *" })
                        </div>
                        <div class="form-group" style="display:none">

                            @*@Html.DropDownListFor(e => e.isAdmin, new SelectList(Model.isAdmins, "Value", "Text"), new { @class = "form-control" })*@
                            @Html.DropDownListFor(e => e.isAdmin,
                                new SelectList(new List<SelectListItem>{
                                    new SelectListItem { Text = "User" , Value = "0"},
                                    new SelectListItem { Text = "Admin", Value = "1" }
                                }, "Value", "Text", "0"), "you are Admin or User?",
                                new { @class = "form-control" })
                        </div>
                        <input type="submit" class="btnRegister" value="Register" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
