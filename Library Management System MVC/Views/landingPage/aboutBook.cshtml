@model Library_Management_System_MVC.Models.topBooks

@{
    ViewBag.Title = "aboutBook";
}

<!DOCTYPE html>

<div class="container">
    <div class="row img-rounded bg-info h-100" style="display:flex;">
        <div class="col-lg-12 img-rounded bg-primary h-100" style="margin: 6px 6px 6px 6px">
            <p><strong>Book: </strong>@Model.bookTitle</p>
        </div>
    </div>
    <div class="row img-rounded bg-info h-100" style="display:flex;">
        <div class="col-lg-12 img-rounded bg-primary h-100" style="margin: 6px 6px 6px 6px">
            <p><strong>Publisher: </strong>@Model.publisher</p>
        </div>
    </div>
    <div class="row img-rounded bg-info h-100" style="display:flex;">
        <div class="col-lg-12 img-rounded bg-primary h-100" style="margin: 6px 6px 6px 6px">
            <p><strong>Writer: </strong>@Model.writers</p>
        </div>
    </div>
    <div class="row img-rounded bg-info h-100" style="display:flex;">
        <div class="col-lg-12 img-rounded bg-primary h-100" style="margin: 6px 6px 6px 6px">
            <p><strong>Genre: </strong>@Model.genre</p>
        </div>
    </div>
    <div class="row img-rounded bg-info h-100" style="display:flex;">
        <div class="col-lg-12 img-rounded bg-primary h-100" style="margin: 6px 6px 6px 6px">
            <p><strong>Rating: </strong>@Model.rating</p>
        </div>
    </div>
    <div class="row" style="display:flex;">
        <div class="col-lg-12 img-rounded bg-danger h-100" style="margin: 6px 6px 6px 6px">
            <input type="button" value="Back" class="btn-danger" onclick="location.href='@Url.Action("Index", "landingPage")'" />
        </div>
    </div>
</div>
